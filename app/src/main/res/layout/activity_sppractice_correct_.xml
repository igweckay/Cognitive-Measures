<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".spatial.SPpracticeCorrect_Activity" >

    <TextView
       android:id="@+id/question_txt"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:text="@string/practice"
       android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:contentDescription="@string/opt1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/question_image"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:contentDescription="@string/opt2" />

     <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:contentDescription="@string/opt4" />

     <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:contentDescription="@string/opt5" />

     <ImageView
         android:id="@+id/question_image"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_below="@+id/question_txt"
         android:layout_marginTop="21dp"
         android:layout_toLeftOf="@+id/imageView4"
         android:contentDescription="@string/main"
          />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView4"
        android:contentDescription="@string/opt5"
        android:src="@drawable/arrow_styled" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:background="#1E669B"
        android:radius="10dp"
        android:text="@string/button_str_back"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignRight="@+id/textView1"
        android:background="#1E669B"
        android:radius="10dp"
        android:text="@string/button_str"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/question_image"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/opt3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question_txt"
        android:layout_below="@+id/imageView1"
        android:gravity="center"
        android:text="@string/sp_right"
        android:textSize="25sp" />

</RelativeLayout>
