<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projecttalentoriginal.SecAR_Activity" >

    <TextView
       android:id="@+id/question_txt"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:text="@string/ar_text"
       android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:src="@drawable/ar_001_1"
        android:contentDescription="@string/opt1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/question_image"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:src="@drawable/ar_001_2"
        android:contentDescription="@string/opt2" />
     
     <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:src="@drawable/ar_001_4"
        android:contentDescription="@string/opt4" />
     
     <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:src="@drawable/ar_001_5"
        android:contentDescription="@string/opt5" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/question_txt"
         android:layout_below="@+id/imageView1"
         android:text="@string/ar_text1"
         android:textSize="23sp" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_below="@+id/question_image"
         android:layout_centerHorizontal="true"
         android:contentDescription="@string/opt3"
         android:src="@drawable/ar_001_3" />

     <ImageView
         android:id="@+id/question_image"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_below="@+id/question_txt"
         android:layout_marginTop="21dp"
         android:layout_toLeftOf="@+id/imageView4"
         android:contentDescription="@string/main"
         android:src="@drawable/ar_001_main" />

     <Button
         android:id="@+id/button3"
         android:layout_width="100dp"
         android:layout_height="65dp"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="22dp"
         android:layout_toRightOf="@+id/imageView5"
         android:background="#1E669B"
         android:radius="10dp"
         android:text="@string/button_str"
         android:textColor="#FFFFFF"
         android:textSize="26sp" />

</RelativeLayout>
