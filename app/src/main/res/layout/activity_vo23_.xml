<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.usc.cognitive.vocab.VO23_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:text="@string/vo23"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <RadioButton android:id="@+id/o1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vo231"
            android:textSize="30sp"/>
        <RadioButton android:id="@+id/o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vo232"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>
        <RadioButton android:id="@+id/o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vo233"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>
        <RadioButton android:id="@+id/o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vo234"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>
        <RadioButton android:id="@+id/o5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vo235"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:text="@string/msg1"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="39dp"
        android:background="#1E669B"
        android:radius="10dp"
        android:text="@string/button_str"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/quit_resume_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="invisible">

        <TextView
            android:id="@+id/quit_resume_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="25sp"
            android:text="@string/quit_resume"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/quit_resume_message"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/quit"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:background="#1E669B"
                android:radius="10dp"
                android:text="Quit"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />
            <Button
                android:id="@+id/resume"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_toRightOf="@+id/quit"
                android:layout_marginLeft="20dp"
                android:background="#1E669B"
                android:radius="10dp"
                android:text="Resume"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

